@model EmployeeManagement.Models.TaskItem
@{
    ViewData["Title"] = "Create Task";
}

<div class="row justify-content-center mt-4">
    <div class="col-lg-8 col-md-10">

        <div class="card shadow-sm border-0 task-card">
            <!-- Header -->
            <div class="card-header py-3"
                 style="background: linear-gradient(135deg,#ff9a5a,#ff6e7f); border-radius:10px 10px 0 0;">
                <h4 class="text-white mb-0">Create Task</h4>
                <small class="text-white-50">Assign a task to an employee</small>
            </div>

            <!-- Body -->
            <div class="card-body px-4 py-3">
                <form asp-action="Create" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="row g-3">
                        <!-- Title -->
                        <div class="col-md-6">
                            <label asp-for="Title" class="form-label small fw-semibold"></label>
                            <input asp-for="Title" class="form-control compact-input" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <!-- Employee -->
                        <div class="col-md-6">
                            <label asp-for="EmployeeId" class="form-label small fw-semibold"></label>
                            <select asp-for="EmployeeId" asp-items="ViewBag.Employees"
                                    class="form-select compact-input">
                                <option value="">-- Select Employee --</option>
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                        </div>

                        <!-- Due Date -->
                        <div class="col-md-6">
                            <label asp-for="DueDate" class="form-label small fw-semibold"></label>
                            <input asp-for="DueDate" type="date"
                                   class="form-control compact-input" />
                            <span asp-validation-for="DueDate" class="text-danger small"></span>
                        </div>

                        <!-- Status -->
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label small fw-semibold"></label>
                            <select asp-for="Status" class="form-select compact-input">
                                <option value="Pending">Pending</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <!-- Description (full width but compact) -->
                        <div class="col-12">
                            <label asp-for="Description" class="form-label small fw-semibold"></label>
                            <textarea asp-for="Description" rows="2"
                                      class="form-control compact-input"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-3 gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
                            Back To Tasks
                        </a>
                        <button type="submit" class="btn btn-success btn-sm px-3">
                            Save Task
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<style>
    .task-card {
        border-radius: 10px;
        overflow: hidden;
    }

    .compact-input {
        padding: 6px 10px !important; /* chhota height */
        font-size: 0.9rem !important;
        border-radius: 6px !important;
    }

        .compact-input:focus {
            border-color: #ff7b70 !important;
            box-shadow: 0 0 4px rgba(255, 120, 100, 0.5) !important;
        }

    .form-label {
        margin-bottom: 2px;
    }
</style>
