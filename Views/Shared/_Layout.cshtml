<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Employee Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg shadow-sm"
         style="background: linear-gradient(135deg,#1e3c72,#2a5298);">
        <div class="container-fluid">

            <a class="navbar-brand fw-bold text-white" asp-controller="Employees" asp-action="Index">
                Employee Management
            </a>

            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold" asp-controller="Employees" asp-action="Index">Employees</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold" asp-controller="Tasks" asp-action="Index">Tasks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-semibold" asp-controller="Attendance" asp-action="Index">Attendance</a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
<style>
    .pro-footer {
        background: linear-gradient(90deg, #0acffe 0%, #3ddc97 100%);
        padding: 18px 0;
        text-align: center;
        color: #ffffff;
        font-size: 15px;
        font-weight: 600;
        letter-spacing: .3px;
        margin-top: 40px;
        box-shadow: 0 -6px 18px rgba(0, 0, 0, 0.08);
    }

        .pro-footer small {
            opacity: 0.9;
            font-weight: 400;
            font-size: 13px;
        }
</style>

<footer class="pro-footer">
    © 2025 Developed by <strong>PRATEEK KUMAR</strong>
    <br />
    <small>All Rights Reserved</small>
</footer>


<style>
    .footer-box {
        background: linear-gradient(135deg, #1e3c72, #2a5298);
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        color: white;
        box-shadow: 0px -3px 10px rgba(0,0,0,0.15);
    }

    .footer-text {
        font-size: 0.95rem;
        letter-spacing: 0.5px;
        font-weight: 500;
    }

        .footer-text strong {
            font-weight: 700;
            color: #ffd369;
        }
</style>

</html>
