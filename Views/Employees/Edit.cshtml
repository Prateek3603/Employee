@model EmployeeManagement.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="row justify-content-center mt-4">
    <div class="col-lg-8 col-md-10">

        <div class="card shadow-sm border-0 emp-edit-card">
            <!-- HEADER -->
            <div class="card-header py-3"
                 style="background: linear-gradient(135deg,#ff7e5f,#feb47b); border-radius:10px 10px 0 0;">
                <h4 class="text-white mb-0">Edit Employee</h4>
                <small class="text-white-50">Update employee details</small>
            </div>

            <!-- BODY -->
            <div class="card-body px-4 py-3">
                <form asp-action="Edit" method="post" novalidate>
                    <input type="hidden" asp-for="EmployeeId" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label small fw-semibold"></label>
                            <input asp-for="Name" class="form-control compact-input" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label small fw-semibold"></label>
                            <input asp-for="Email" class="form-control compact-input" readonly />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>


                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label small fw-semibold"></label>
                            <input asp-for="Phone" class="form-control compact-input" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Department" class="form-label small fw-semibold"></label>
                            <input asp-for="Department" class="form-control compact-input" />
                            <span asp-validation-for="Department" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="JoiningDate" class="form-label small fw-semibold"></label>
                            <input asp-for="JoiningDate" type="date"
                                   class="form-control compact-input" />
                            <span asp-validation-for="JoiningDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-3 gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3 btn-back">
                            Back to Employees
                        </a>
                        <button type="submit" class="btn btn-primary btn-sm px-3">
                            Update
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<style>
    .emp-edit-card {
        border-radius: 10px;
        overflow: hidden;
    }

    .compact-input {
        padding: 6px 10px !important;
        font-size: 0.9rem !important;
        border-radius: 6px !important;
    }

        .compact-input:focus {
            border-color: #ff7e5f !important;
            box-shadow: 0 0 4px rgba(255, 126, 95, 0.5) !important;
        }

    .form-label {
        margin-bottom: 2px;
    }

    .btn-back:hover {
        background-color: #6c757d;
        color: #fff;
    }

    .form-control[readonly] {
        background-color: #e9ecef; /* halka grey */
        opacity: 1; /* text light na lage */
        cursor: not-allowed; /* haath waala cursor hata ke "not allowed" dikhaye */
    }

</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
