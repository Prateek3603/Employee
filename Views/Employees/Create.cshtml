@model EmployeeManagement.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
}

<style>
    .gradient-header {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
    }

    .form-label {
        font-weight: 600;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .btn-save {
        background: linear-gradient(135deg, #00b09b 0%, #96c93d 100%);
        border: none;
        color: white;
        font-weight: bold;
    }

        .btn-save:hover {
            opacity: .85;
        }

    .btn-cancel {
        background-color: #f44336;
        color: white;
        font-weight: bold;
    }

        .btn-cancel:hover {
            opacity: 0.85;
            color: white;
        }

    .btn-cancel {
        background-color: #6c757d; /* Grey */
        color: white;
        border-radius: 6px;
        transition: 0.2s ease;
    }

        .btn-cancel:hover {
            background-color: #5a6268; /* Darker grey on hover */
            color: #ffffff; /* Text stays visible */
        }

</style>

<div class="row justify-content-center mt-4">
    <div class="col-lg-8 col-md-10">

        <div class="card shadow-lg border-0 mb-4">

            <!-- HEADER -->
            <div class="gradient-header p-4 d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">Create Employee</h3>
                    <small class="text-light">Add a new member to your vibrant team 🚀</small>
                </div>

                <a asp-action="Index" class="btn btn-light btn-sm fw-bold shadow-sm">
                    ← Back
                </a>
            </div>

            <!-- BODY -->
            <div class="card-body px-4 py-4">
                <form asp-action="Create" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="name@company.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label"></label>

                            <input asp-for="Phone"
                                   class="form-control"
                                   placeholder="Enter 10-digit number"
                                   maxlength="10"
                                   pattern="\d{10}"
                                   title="Please enter exactly 10 digits"
                                   oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 10);" />

                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>


                        <div class="col-md-6 mb-3">
                            <label asp-for="Department" class="form-label"></label>
                            <input asp-for="Department" class="form-control" placeholder="IT / HR / Finance" />
                            <span asp-validation-for="Department" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="JoiningDate" class="form-label"></label>
                            <input asp-for="JoiningDate" type="date" class="form-control" />
                            <span asp-validation-for="JoiningDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        
                        <button type="submit" class="btn btn-save px-4 py-2">Save</button>
                        <a asp-action="Index" class="btn btn-cancel me-2 px-4 py-2">Cancel</a>

                    </div>
                </form>
            </div>

        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
